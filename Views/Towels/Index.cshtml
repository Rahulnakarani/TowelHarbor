@model TowelHarbor.Models.TowelMeterialViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@*Added form for search bar and filter button*@
<form asp-controller="Towels" asp-action="Index" method="get">
    <p>

        <select asp-for="TowelMaterial" asp-items="Model.Materials">
            <option value="">All</option>
        </select>

        Type: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Towels[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Towels[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Towels[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Towels[0].Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Towels[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Towels[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Towels[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Towels)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
